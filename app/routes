from fastapi import APIRouter

router = APIRouter()

providers = [
    {"id": "1", "name": "Hands United Cafe", "accessibility_features": ["ASL", "Visual Menu"]},
]

@router.get("/{id}")
def get_provider(id: str):
    for p in providers:
        if p["id"] == id:
            return p
    return {"error": "Provider not found"}